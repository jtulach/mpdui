<actions>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>exec:exec</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
        </properties>
        <activatedProfiles>
            <activatedProfile>webkit-presenter</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>exec:exec</goal>
        </goals>
        <properties>
            <skipTests>true</skipTests>
            <jpda.listen>true</jpda.listen>
            <exec.debug.arg>-Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</exec.debug.arg>
        </properties>
        <activatedProfiles>
            <activatedProfile>webkit-presenter</activatedProfile>
        </activatedProfiles>
    </action>
        <action>
            <actionName>CUSTOM-Build Desktop App</actionName>
            <displayName>Build Desktop App</displayName>
            <goals>
                <goal>clean</goal>
                <goal>package</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>webkit-presenter</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-Browser-Presenter</actionName>
            <displayName>Run as Server</displayName>
            <goals>
                <goal>process-classes</goal>
                <goal>exec:exec</goal>
            </goals>
            <properties>
                <exec.server.arg>server</exec.server.arg>
                <skipTests>true</skipTests>
                <jpda.listen>true</jpda.listen>
                <exec.debug.arg>-Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</exec.debug.arg>
                <exec.server.arg>server</exec.server.arg>
            </properties>
            <activatedProfiles>
                <activatedProfile>browser-presenter</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-Build Server App</actionName>
            <displayName>Build Server App</displayName>
            <goals>
                <goal>clean</goal>
                <goal>package</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
            <activatedProfiles>
                <activatedProfile>browser-presenter</activatedProfile>
            </activatedProfiles>
        </action>
</actions>
